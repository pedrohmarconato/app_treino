{
  "version": 2,
  "name": "app-treino",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "**/*.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "**/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/sw.js", "dest": "/sw.js" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/styles.css", "dest": "/styles.css" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/services/(.*)", "dest": "/services/$1" },
    { "src": "/templates/(.*)", "dest": "/templates/$1" },
    { "src": "/feature/(.*)", "dest": "/feature/$1" },
    { "src": "/components/(.*)", "dest": "/components/$1" },
    { "src": "/utils/(.*)", "dest": "/utils/$1" },
    { "src": "/state/(.*)", "dest": "/state/$1" },
    { "src": "/ui/(.*)", "dest": "/ui/$1" },
    { "src": "/hooks/(.*)", "dest": "/hooks/$1" },
    { "src": "/integration/(.*)", "dest": "/integration/$1" },
    { "src": "/icons/(.*)", "dest": "/icons/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}